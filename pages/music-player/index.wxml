<!--pages/music-player/index.wxml-->
<wxs module="format" src="/utils/format.wxs"></wxs>

<!--背景-->
<image class="bg-image" mode="aspectFill" src="{{currentSong.al.picUrl}}"></image>
<view class="bg-cover"></view>

<!--导航-->
<view class="nav-box" style="height: {{navHeight}}px;">
  <nav-bar>
    <view slot="center" class="tab">
      <view class="item {{currentPage == 0 ? 'active': ''}}" data-current="0" bindtap="handleClickItem">歌曲</view>
      <view class="divider">|</view>
      <view class="item {{currentPage == 1 ? 'active': ''}}" data-current="1" bindtap="handleClickItem">歌词</view>
    </view>
  </nav-bar>
</view>

<!--本体-->
<swiper class="content" style="height: {{contentHeight}}px" current="{{currentPage}}" bindchange="handleChangeCurrent">
  <swiper-item class="music">
    <view class="album">
      <image src="{{currentSong.al.picUrl}}" mode="widthFix"></image>
    </view>
    <view class="info">
      <view class="title">{{currentSong.name}}</view>
      <view class="subtitle">
        <view>{{currentSong.al.name}}</view>
        <view>专辑：{{currentSong.alia[0]}}</view>
      </view>
    </view>
    <view class="lyric" wx:if="{{isShowMusicLyric}}">{{currentLyric}}</view>
    <slider 
      class="slider" 
      block-size="12" 
      backgroundColor="#999" 
      activeColor="#fff"
      min="0" 
      max="{{sliderLength}}" 
      data-aaa="{{sliderValue}}"
      value="{{sliderValue}}" 
      bindchange="bandleSliderChange" 
      bindchanging="handleSliderChanging"></slider>
    <view class="time">
      <view class="current">{{format.formatDuration(currentTime)}}</view>
      <view class="duration">{{format.formatDuration(currentSong.dt)}}</view>
    </view>
    <view class="operation">
      <view class="btn"><image class="btn-type" src="/assets/images/player/play_order.png"></image></view>
      <view class="btn"><image class="btn-prev" src="/assets/images/player/play_prev.png"></image></view>
      <view class="btn" bindtap="handleModeClick"><image class="btn-mode" src="/assets/images/player/play_{{btnMode}}.png"></image></view>
      <view class="btn"><image class="btn-next" src="/assets/images/player/play_next.png"></image></view>
      <view class="btn"><image class="btn-list" src="/assets/images/player/play_music.png"></image></view>
    </view>
  </swiper-item>
  <swiper-item class="lyric">
    2
  </swiper-item>
</swiper>