/* components/song-menu-item/index.wxss */
.album {
  position: relative;

  border-radius: 10rpx;
  overflow: hidden;
}

.album .cover {
  width: 100%;
  vertical-align: top;
}
.album .count {
  position: absolute;
  bottom: 0;
  right: 0;

  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
}

.name {
  color: #000;
  font-size: 26rpx;
  margin: 10rpx 0;

  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}