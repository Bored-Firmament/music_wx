/* components/header-box/index.wxss */
.header-box {
  display: flex;
  justify-content: space-between;
}

.header-title {
  font-weight: 800;
  font-size: 36rpx;
  color: #000;
  padding: 30rpx 0;
}

.header-other {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
  line-height: 50rpx;
}
.header-other image {
  width: 50rpx;
  height: 50rpx;
}

.header-other .ho-slot:empty + .ho-default {
  display: flex;
}
.ho-default {
  display: none;
}